mixin workList
	ul.work__list
		-var k = 1
		each value, key in workList
			if (key == "human")
				li.work__item
					.work__item-wrap
						+svg("work__icon-svg", key)
						span.work__item-num= k+"."
						.work__item-text
							| #{value}
					+firstArrSvg
			else
				li.work__item
					-var num = ++k
					.work__item-wrap
						+svg("work__icon-svg", key)
						span.work__item-num= num+"."
						.work__item-text
							| #{value}
					+arrSvg(num)

mixin svg(className = '', id)
	svg(class= className)
		use(xlink:href=`/assets/svg/sprite.svg#${id}`)

mixin hamburger
	a(href="#menu").hamburger.hamburger--elastic
		span.hamburger-box
			span.hamburger-inner

mixin nav(className, activeItem, mod= "")
	nav(class= className )
		+hamburger
		ul(class= className + "__list" + mod id="menu")
			each link, key in nav
				li(class=className+'__item' + ( (key == activeItem) ?  ' '+'active' : '')+ mod)
					a(href="#js-"+link class=className+"__link "+mod)= key


mixin Btn (titleText, mod = "")
	if (titleText == "Отправить")
		button(class= "btn" type="button") #{titleText}
	else
		a(href="#" class="btn " + mod) #{titleText}

mixin sectionTop(title, desc = '', mod = '')
	.section__top
		.container
			.top__row
				if (title == "как мы работаем")
					h2(class="top__title "+ mod) #{title}
				else
					h2(class="top__title "+ mod) #{title}
					div(class="top__desc "+ mod)
						p !{desc}

mixin Top(sectionName)
	section(class="section "+ sectionName id = "#js-"+ sectionName)
		+sectionTop(secTitle[sectionName], desc[sectionName])

mixin ratingList(obj, mod = "")
	.container
		ul(class= "rating__list " + mod)
			each val, key in obj
				li(class="rating__item " + mod)
					if (key === "")
						.content__item_wrap
							+svg("account__svg", "book")
					else
						a(href= val["link"] class="item__link " + mod)= key
						div(class="item__text " + mod )
							p= val["text"]

mixin sectionBottom(btnText, mod = "")
	div(class= "section__bottom " + mod id="js-btn_"+mod)
		+Btn(btnText)

mixin socials(className, mod = '')
	ul(class= className + "__list " + mod)
		each value, key in pathSocials
			li(class=className + "__items " + mod)
				a(href=value class=className + "__link " + key + ' ' + mod)

mixin contacts(className)
	ul(class=className + "__list")
		each value, key in contacts
			li(class=className + "__items " + key)= value

mixin menuNav(className, mod="")

	if (className == "option")
		each key, value in menu
			if value != "news" && value != "diploma" && value != "price" && value != "about" && value != "specialists"
				option= key.name


	else if (mod == "header-nav_footer")
		ul(class=className + "__list "+ mod)
			each key, value in menu
				if (value != "news" && value != "diploma"&& value != "price" && value!="about")
					li(class= className + "__items " + mod)
						a(href=key.path class=className + "__link "+ mod)= key.name
	else
		ul(class=className + "__list")
			each key, value in menu
				li(class= className + "__items")
					a(href=key.path class=className + "__link")= key.name



